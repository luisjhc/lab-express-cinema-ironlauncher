<h4>Welcome {{user.username}}</h4>
<a href="/auth/logout">Logout</a>
<div class="main">
  {{#with movieDetails}}

  <img src="{{this.image}}" alt="movie image">

  <div class="details">
    <h1>{{this.title}}</h1>
    <h2>Director: {{this.director}}</h2>
    <h3>Starring:</h3>

    <ul>
      {{#each this.stars}}
      <li>{{this}}</li>
      {{/each}}
    </ul>

    <p>{{this.description}}</p>
    <p>Showing at:</p>
    <p>{{#each this.showtimes}} {{this}} ||{{/each}}</p>
    <a href="/movies">Go back</a>
  </div>
  {{/with}}
</div>